

<!DOCTYPE html>
<html>
  <head>
    <title>Buena Accion</title>
    <link href="https://fonts.googleapis.com/css?family=Shrikhand" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Molengo&amp;subset=latin-ext" rel="stylesheet">

    <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
    <%= csrf_meta_tags %>
    <style media="screen">
    </style>
  </head>
  <body >
    <header>
        <p><%= link_to "Home", organizations_path %></p>
        <!-- <%= image_tag('hand-shake.png') %> -->
      <h1> Buena Accion</h1>
        <% flash.each do |type, message| %>
          <%= content_tag :div, message.html_safe, class: type %>
        <% end %>
        <% if current_user %>
        <div class = "login-container">
        <div class ="login">
          Signed in as <strong><%= current_user.name %></strong>
          <%= link_to "Sign out", signout_path, id: "sign_out" %>
        </div>
        <% else %>
        <div class ="login">
          <%= link_to "Sign in with Google", "/auth/google_oauth2", id: "sign_in" %>
        <% end %>
      </div>
    </div>
    </header>
    <div>
    <%= yield %>
    </div>
    <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  </body>
</html>
